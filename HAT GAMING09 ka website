    <!-- Firebase SDK (ES Module) -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.4.0/firebase-app.js";
        import { getDatabase, ref, set, get, child } from "https://www.gstatic.com/firebasejs/11.4.0/firebase-database.js";
        
        // ðŸ”¥ Firebase Configuration
        const firebaseConfig = {
            apiKey: "put your api",
            authDomain: "put your auth domain",
            databaseURL: "put you's",
            projectId: "what you created",
            storageBucket: "your's storage",
            messagingSenderId: "yours sender id",
            appId: "yoo:web:put here your ",
            measurementId: "your's"
        };

        // Initialize Firebase
        const app = initializeApp(firebaseConfig);
        const db = getDatabase(app);

        // ðŸ”¥ Function to Fetch News
        async function fetchNews() {
            const apiKey = "your api key";
            const url = `your's}`;
            try {
                const response = await fetch(url);
                const data = await response.json();
                const newsContainer = document.getElementById("news-container");
                newsContainer.innerHTML = "";
                data.articles.slice(0, 5).forEach(article => {
                    const div = document.createElement("div");
                    div.classList.add("card");
                    div.innerHTML = `
                        <h3>${article.title}</h3>
                        <img src="${article.urlToImage || 'https://via.placeholder.com/300'}" alt="News Image">
                        <p>${article.description || "No description available"}</p>
                        <a href="${article.url}" target="_blank">Read More</a>
                    `;
                    newsContainer.appendChild(div);
                });
            } catch (error) {
                console.error("Error fetching news:", error);
            }
        }

        // ðŸŽ® Function to Fetch Games
        async function fetchGames() {
            const apiKey = "your api key here go to rawg ai and claim it's free";
            const url = `yours`;
            try {
                const response = await fetch(url);
                const data = await response.json();
                const gamesContainer = document.getElementById("games-container");
                gamesContainer.innerHTML = "";
                data.results.slice(0, 5).forEach(game => {
                    const div = document.createElement("div");
                    div.classList.add("card");
                    div.innerHTML = `
                        <h3>${game.name}</h3>
                        <img src="${game.background_image}" alt="Game Image">
                    `;
                    gamesContainer.appendChild(div);
                });
            } catch (error) {
                console.error("Error fetching games:", error);
            }
        }

        // Load News and Games on Page Load
        fetchNews();
        fetchGames();
    </script>
